/* pages/alterAddress/alterAddress.wxss */
page{
  width: 100vw;
  height:100vh;
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/myGiftBg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  overflow: hidden;
  position: fixed;
  top:0;
  left: 0
}
.gift{
  width: 620rpx;
  padding: 30rpx 35rpx;
  /* height:1146rpx; */
  height: 95vh;
  margin: 0 auto;
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/souvenirbg.png');
  background-size: 100% 100%;
}
.giftshow{
  height: 94vh;
  width: 100%
}
.goodsList{
  height:620rpx;
  /* padding-top: 120rpx; */
  width:100%;
  background: #fff;
  border-radius: 8rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.goodsImg{
  width:100%;
  height:100%;
  /* display:block;
  margin: 0 auto; */
}
.shuoming{
  width:100%;
  text-align: center;
  position: absolute;
  bottom: 0;
  height:96rpx;
  background-color: rgba(0,0,0,.2);
  color:#fff;
  line-height: 96rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.mask{
  position: absolute;
  top:0;
  left:0;
  width: 100vw;
  height:100vh;
  background: rgba(0,0,0,.8);
  z-index: 10;
}
.popup{
  position: absolute;
  top:146rpx;
  left:100rpx;
  width: 512rpx;
  height:540rpx;
  padding-top: 160rpx;
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/souvenirpop.png');
  background-size: 100% 100%;
  z-index: 20;
  padding: 110rpx 20rpx 20rpx 20rpx;
}
.close{
  width:54rpx;
  height:54rpx;
  position:absolute;
  top:56rpx;
  right:-10rpx;
  border:5rpx solid rgba(181, 203, 219, .5);
  border-radius:50rpx;
}
.answerBtn-right{
  width:468rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #86ffd6;
  font-size: 42rpx;
  margin: 40rpx 0 0 112rpx;
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/btnRight.png');
  background-size: 100% 100%;
}
.tt3{
  width:254rpx;
  height:70rpx;
  font-size: 38rpx;
  color: #fff;
  margin:50rpx auto 0;
  line-height: 70rpx;
  font-weight: bold;
}
button {
  margin-top: 0;
  padding:0;
  background-color: rgba(0,0,0,0)
}
.info{
  width: 472rpx;
  height:450rpx;
  padding: 40rpx 20rpx;
}
.infolist{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}
.infolist text{
  font-size: 22rpx;
  color: #b5c1db;
  margin-right: 18rpx;
}
.infolist input{
  font-size: 26rpx;
  color: #fff;
  height:58rpx;
  width:258rpx;
  border: 1rpx solid #5a71a4;
  background: #131e34;
  border-radius: 8rpx;
  line-height: 58rpx;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.tips{
  text-align: center;
  height:310rpx;
  line-height: 348rpx;
  color: #fff;
  font-size: 32rpx
}

/* directory.wxss */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 300;
  background: rgba(0, 0, 0, 0.3);
}
.state-item {
  width: 20%;
  height: 70rpx;
  font-size: 11pt;
  line-height: 70rpx;
  text-align: center;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
}
.border.state-item {
  border: 2rpx solid #c4245c;
}
.date {
  min-width: 40%;
  display: flex;
  font-size: 11pt;
  color: #bdbdbd;
  align-items: center;
}

.date-btn {
  min-width: 80%;
  font-size: 12pt;
  background-color: #c4245c;
  color: #fff;
  position: fixed
}
.picker-view {
  width: 100%;
  display: flex;
  z-index:40;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}
.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}