/* pages/award/award.wxss */
page{
  width: 100vw;
  height:100vh;
  padding-top: 60rpx;
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/myGiftBg.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  overflow: hidden;
  position: fixed;
  top:0;
  left: 0
}
.main{
  width:680rpx;
  height:850rpx;
  margin:0 auto;
  padding-top:90rpx; 
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/mygift.png');
  background-size: 100% 100%;
}
.img{
  width:128rpx;
  height:128rpx;
  border: 6rpx solid #fff;
  border-radius: 128rpx;
  display: block;
  margin: 0 auto;
}
.name{
  font-size: 30rpx;
  text-align: center;
  margin: 40rpx 0;
  color: #fff;
}
.gift{
  font-size: 40rpx;
  text-align: center;
  color: #20ffb3;
  font-weight: bold
}
.statistics{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 88rpx 0 100rpx;
}
.tt{
  font-size: 32rpx;
  text-align: center;
  color: #ffe71e;
}
.ty{
  width:130rpx;
  height:44rpx;
  line-height: 44rpx;
  color: #fff;
  background: #1b2843;
  font-size: 24rpx;
  text-align: center;
  border-radius: 44rpx;
  margin-top: 30rpx
}
.answerBtn-right{
  width:468rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #86ffd6;
  font-size: 42rpx;
  margin: 40rpx 0 0 112rpx;
  background-image: url('http://yukicomic-pic.oss-cn-hangzhou.aliyuncs.com/XCX_rongyao/btnRight.png');
  background-size: 100% 100%;
}
button {
  margin: 0;
  padding:0;
  background-color: rgba(0,0,0,0)
}